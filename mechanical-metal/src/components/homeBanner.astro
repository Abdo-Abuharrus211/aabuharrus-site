---
import { Image } from "astro:assets";
import bannerImage from "../images/abdu-banner.webp";

// Simple Hero with image on the right and hero to the left
---

<div id="Home" class="flex padding3">
  <div class="flex column">
    <div class="greeting-box1">
      <h1 class="greeting">،أهلًا</h1>
    </div>
    <div class="greeting-box2">
      <h1 class="greeting">Hi,</h1>
    </div>

    <div class="intro-box">
      <h2 class="banner-text">I'm Abdu, a Software Developer</h2>
      <div class="margin5">
        <button
          style="font-size: var(--spacing4);"
          class="outline-btn"
          onclick="document.getElementById('Bio')?.scrollIntoView({ behavior: 'smooth' });"
          >Check out my stuff</button
        >
      </div>
    </div>
  </div>
  <div class="visual-box">
    <!-- <Image class:list={"banner-img"} src={bannerImage} alt="banner photo" /> -->
  </div>
</div>

<style>
  #Home {
    padding: 10%;
    height: 100vh;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
  }
  .greeting {
    font-size: 10rem;
  }

  .greeting-box1 {
    margin-left: 40%;
  }

  .greeting-box2 {
    align-self: flex-start;
    margin-right: var(--spacing7);
  }

  .intro-box {
    padding: 0%;
    text-align: start;
    align-self: flex-start;
  }
  .banner-img {
    height: 100%;
  }
</style>
