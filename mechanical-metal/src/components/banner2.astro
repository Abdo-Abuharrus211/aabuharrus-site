---
import Image from "astro/components/Image.astro";
import heroBanner from "../images/silver-dunes.webp";
---

<div id="Home">
  <!-- Animated gradient background -->

  <div class="banner-box">
    <div class="flex column">
      <h1 class="greeting1">،أهلًا</h1>
      <h1 class="greeting2">Hi,</h1>
    </div>
    <h2 class="banner-text">I'm Abdu, a Software Developer</h2>
    <div class="center margin5">
      <button
        style="font-size: var(--spacing4);"
        class="outline-btn"
        onclick="document.getElementById('Bio')?.scrollIntoView({ behavior: 'smooth' });"
        >Check out my stuff</button
      >
    </div>
  </div>
</div>

<style define:vars={{heroBanner}}>
  #Home {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-image: url("../images/snail2.JPG");
  }

  .banner-box {
    position: relative;
    z-index: 2;
    color: white;
    text-align: center;
  }

  .greeting1,
  .greeting2 {
    font-size: 10rem;
  }

  .greeting1 {
    align-self: flex-end;
    margin-left: var(--spacing7);
  }

  .greeting2 {
    align-self: flex-start;
    margin-right: var(--spacing7);
  }

  .banner-text {
    color: var(--text);
  }
</style>
