---
import Image from "astro/components/Image.astro";
import dunes from "../images/silver-dunes.webp";
---
<!-- 
  TODO: adjust responsiveness for 1080, medium and small screens.
 -->

<section id="Home">
  <div class="banner-box">
    <div class="flex column">
      <h1 class="greeting1">،أهلًا</h1>
      <!-- <h1 class="greeting2">Hi,</h1> -->
    </div>
    <h2 class="banner-text">I'm Abdu, a dev</h2>
    <button>My stuff</button>
  </div>
  <!-- <div class="action-box">
    <button>My stuff</button>
  </div> -->
  <Image class:list={"banner-img"} src={dunes} alt=`dunes banner photo` />
</section>

<style>
  #Home {
    max-width: fit-content;
    margin: auto;
    overflow: visible;
  }

  .banner-img {
    height: 80%;
  }

  .banner-box {
    position: absolute;
    top: 60%;
    left: 30%;
    /* to move along x and y axis */
    transform: translate(-50%, -80%);
  }
  .action-box {
    position: absolute;
    top: 60%;
    left: 30%;
    /* to move along x and y axis */
    transform: translate(-50%, -50%);
  }

  .greeting1,
  .greeting2 {
    font-size: 10rem;
    color: hsl(80, 22%, 8%);
  }

  .greeting1 {
    align-self: flex-end;
    margin-left: var(--spacing7);
  }

  .greeting2 {
    align-self: flex-start;
    margin-right: var(--spacing7);
  }

  .banner-text {
    color: hsl(80, 22%, 8%);
  }
</style>
