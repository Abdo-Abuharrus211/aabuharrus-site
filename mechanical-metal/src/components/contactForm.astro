<section id="Contact">
  <h1>Contact me</h1>
  <p>Whether it's for work or fun, let's chat.</p>
  <div class="card">
    <form action="src/scripts/mail.ts" id="contact-form" class="flex column center" action="mail">
      <div>
        <label for="name-input">Full name</label>
        <input
          class="margin2"
          type="text"
          name="name"
          id="name-input"
          placeholder="Your full name pls"
