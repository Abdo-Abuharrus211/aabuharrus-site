---
const { skillProps } = Astro.props;
---

<div
  id={`skill-${skillProps.id}`}
  class="skill-card container card top-accent-tab hidden"
>
  <div class="flex column padding3">
    <h2>{skillProps.data.name}</h2>
    <img
      src={skillProps.data.icon}
      alt={`${skillProps.data.name} icon`}
      class="skill-icon"
    />
    <div class="margin2 points-box">
      <ul class="points-list">
        {skillProps.data.points.map((point: string) => <li>{point}</li>)}
      </ul>
    </div>
  </div>
</div>

<style>
  .skill-card {
    max-width: 40%;
  }
  .skill-icon {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    width: 2rem;
    height: 2rem;
  }
  .points-box {
    padding: 0 var(--spacing2);
    margin: 0 var(--spacing4);
  }
  .points-list {
    list-style: disc;
    line-height: 1.5rem;
  }
  .points-list li {
    margin-bottom: 0.5em;
    padding-left: 0.2em;
  }
</style>
