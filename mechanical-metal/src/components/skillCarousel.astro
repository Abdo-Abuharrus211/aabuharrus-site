---
import { getCollection } from "astro:content";
import SkillCard from "./skillCard.astro";

const skillsCollection = await getCollection("skills");
---

<section id="skill-carousel" class="margin7">
  <div class="carousel padding5">
    <div class="track">
      {
        skillsCollection.map((skill: any, index) => (
          <div
            id={`carousel-item-${index}`}
            class="carousel-item"
            data-index={index}
          >
            <img
              class="track-icon"
              src={skill.data.icon}
              alt={`${skill.data.icon} icon`}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .carousel {
    overflow: hidden;
    width: 100%;
    height: max-content;

    /* This is the part that defines the fade out effect */
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 15%,
      black 85%,
      transparent 100%
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 15%,
      black 85%,
      transparent 100%
    );
  }
  .track {
    padding: var(--spacing3);
    display: flex;
    width: max-content;
    height: max-content;
    animation: scroll 20s linear infinite;
  }
  .carousel-item {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--spacing7);
    height: var(--spacing6);
    margin-right: 2rem;
  }

  .carousel-item:hover {
    scale: 0.75;
    cursor: pointer;
  }

  @keyframes scroll {
    0% {
      transform: translateX(10);
    }
    100% {
      transform: translateX(-40%);
    }
  }
</style>
